# Copy to .env and set real values. Required for backend and Docker Compose.

# Database (required)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=metrics_db
DB_USER=postgres
DB_PASSWORD=

# Production: use SSL and reject invalid certs
# DB_SSL=true
# DB_SSL_REJECT_UNAUTHORIZED=true

# Auth (required in production: set a strong random secret, min 32 chars)
# Generate: openssl rand -base64 32
JWT_SECRET=

# URLs (required in production)
NODE_ENV=development
FRONTEND_URL=http://localhost:5173
API_BASE_URL=http://localhost:3000
# For Docker: backend uses grafana:3000. For local dev: http://localhost:3001
GRAFANA_URL=http://localhost:3001

# Optional: restrict CORS for metrics/tracker (comma-separated origins; * = allow any)
# ALLOWED_METRICS_ORIGINS=https://app.example.com,https://cdn.example.com
